{
  "name": "mozaicfm",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.7.1",
  "type": "module",
  "scripts": {
    "setup": "git config --local core.hooksPath .githooks && corepack enable pnpm",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "fmt": "biome format --write . && prettier -w './**/*.{md,yml}'",
    "lint": "biome check . --write && next lint --fix",
    "check": "pnpm fmt && pnpm lint",
    "pages:build": "pnpm next-on-pages",
    "preview": "pnpm pages:build && wrangler pages dev",
    "deploy": "pnpm pages:build && wrangler pages deploy --branch main",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv env.d.ts",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "chromatic": "chromatic --project-token $CHROMATIC_PROJECT_TOKEN",
    "build-style-dictionary": "style-dictionary build -c ./style-dictionary.config.js",
    "token-transform": "token-transformer designTokens/tokens.json designTokens/_transformedTokens.json GlobalToken,SemanticToken/light,SemanticToken/dark --expandTypography"
  },
  "dependencies": {
    "@tokens-studio/sd-transforms": "^1.2.3",
    "next": "14.2.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "style-dictionary": "^4.0.1",
    "token-transformer": "^0.0.33"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@chromatic-com/storybook": "^1.7.0",
    "@cloudflare/next-on-pages": "^1.13.2",
    "@cloudflare/workers-types": "^4.20240821.1",
    "@storybook/addon-essentials": "^8.2.9",
    "@storybook/addon-interactions": "^8.2.9",
    "@storybook/addon-links": "^8.2.9",
    "@storybook/addon-onboarding": "^8.2.9",
    "@storybook/blocks": "^8.2.9",
    "@storybook/nextjs": "^8.2.9",
    "@storybook/react": "^8.2.9",
    "@storybook/test": "^8.2.9",
    "@types/node": "^22.5.0",
    "@types/react": "^18.3.4",
    "@types/react-dom": "^18.3.0",
    "chromatic": "^11.7.1",
    "eslint": "^8.9.0",
    "eslint-config-next": "14.2.6",
    "eslint-plugin-next-on-pages": "^1.13.2",
    "eslint-plugin-storybook": "^0.8.0",
    "lint-staged": "^15.2.9",
    "prettier": "^3.3.3",
    "storybook": "^8.2.9",
    "typescript": "^5.5.4",
    "vercel": "^37.0.0",
    "wrangler": "^3.72.1"
  }
}
