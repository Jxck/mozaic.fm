{
  "name": "mozaicfm",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.1.4",
  "scripts": {
    "setup": "git config --local core.hooksPath .githooks && corepack enable pnpm",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "fmt": "biome format --write . && prettier -w './**/*.{md,yml}'",
    "lint": "biome check . --write && next lint --fix",
    "check": "pnpm fmt && pnpm lint",
    "pages:build": "pnpm next-on-pages",
    "preview": "pnpm pages:build && wrangler pages dev",
    "deploy": "pnpm pages:build && wrangler pages deploy --branch main",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv env.d.ts"
  },
  "dependencies": {
    "next": "14.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@cloudflare/next-on-pages": "^1.13.2",
    "@cloudflare/workers-types": "^4.20240806.0",
    "@types/node": "^20.14.15",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.1.0",
    "eslint-plugin-next-on-pages": "^1.13.2",
    "lint-staged": "^15.2.9",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4",
    "vercel": "^34.4.0",
    "wrangler": "^3.71.0"
  }
}
