{
  "name": "mozaicfm",
  "version": "0.1.1",
  "private": true,
  "packageManager": "pnpm@9.11.0",
  "scripts": {
    "setup": "git config --local core.hooksPath .githooks && corepack enable pnpm",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "vitest",
    "fmt": "biome format --write . && prettier -w './**/*.{md,yml}'",
    "lint": "biome check . --write && eslint src/app --fix",
    "check": "pnpm fmt && pnpm lint",
    "pages:build": "pnpm next-on-pages",
    "preview": "pnpm pages:build && wrangler pages dev",
    "deploy": "pnpm pages:build && wrangler pages deploy --branch main",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv env.d.ts",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "chromatic": "chromatic --project-token $CHROMATIC_PROJECT_TOKEN"
  },
  "dependencies": {
    "@mdx-js/loader": "^3.0.1",
    "@mdx-js/react": "^3.0.1",
    "@next/mdx": "^14.2.13",
    "@types/mdx": "^2.0.13",
    "next": "14.2.13",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "remark-frontmatter": "^5.0.0",
    "remark-mdx-frontmatter": "^5.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.2",
    "@chromatic-com/storybook": "^2.0.2",
    "@cloudflare/next-on-pages": "^1.13.3",
    "@cloudflare/workers-types": "^4.20240924.0",
    "@eslint/compat": "^1.1.1",
    "@storybook/addon-essentials": "^8.3.3",
    "@storybook/addon-interactions": "^8.3.3",
    "@storybook/addon-links": "^8.3.3",
    "@storybook/addon-onboarding": "^8.3.3",
    "@storybook/blocks": "^8.3.3",
    "@storybook/nextjs": "^8.3.3",
    "@storybook/react": "^8.3.3",
    "@storybook/test": "^8.3.3",
    "@types/node": "^22.7.0",
    "@types/react": "^18.3.9",
    "@types/react-dom": "^18.3.0",
    "chromatic": "^11.10.4",
    "eslint": "^9.11.1",
    "eslint-config-next": "14.2.13",
    "eslint-plugin-storybook": "^0.8.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "storybook": "^8.3.3",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.7.0",
    "unist-util-visit": "^5.0.0",
    "vercel": "^37.5.4",
    "vitest": "^2.1.1",
    "wrangler": "^3.78.8"
  }
}
